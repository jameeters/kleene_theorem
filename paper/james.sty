% Alter the way chapters work so that I like them better
\newcommand{\mychapter}[1]{
	% \setcounter{chapter}{#1}
	\stepcounter{chapter}
	\setcounter{section}{0}
	\chapter*{#1}
	\addcontentsline{toc}{chapter}{\thechapter ~~~ #1}
	\renewcommand{\leftmark}{#1}
	\renewcommand{\rightmark}{#1}
}


